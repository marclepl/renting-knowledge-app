<div class="container">
  <h1>Add a new book that you want to share!</h1>
    <%= simple_form_for [ @book ], :html => { :class => 'form-vertical' } do |f| %>
      <%= f.input :title, placeholder: "ex: 'The Shining'" %>
      <%= f.input :author, placeholder: "ex: 'Stephen King'" %>
      <%= f.input :description, label: "Description (max. 140 characters)", placeholder: "What did you like about this book?", input_html: { maxlength: 140 } %>
      <%= f.input :price_per_day, label: "Price per day in CHF",   placeholder: "CHF" %>
      <%= f.input :photo, as: :file %>
      <%= f.submit "Share this book with the world!", class: "btn btn-flat" %>
    <% end %>
