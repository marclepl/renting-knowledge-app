<div class="container">
  <%= simple_form_for [ @book ], :html => { :class => 'form-vertical' } do |f| %>
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Submit" %>
  <% end %>
</div>
